@model DataSync_Website.Models.UserLoginModel
@{
    Html.EnableClientValidation();
    Html.EnableUnobtrusiveJavaScript();
}
@if (User.Identity.IsAuthenticated)
{
    Response.Redirect("/");
}
else
{
    using (Html.BeginUmbracoForm("UserLogin", "LoginSurface"))
    {
        <div class="well col-md-6">
            @TempData["Status"]
            <div class="col-md-12" style="float: none">
                @Html.ValidationMessageFor(model => model.UserName)
                @Html.TextBoxFor(x => x.UserName, new { @class = "form-control", @placeholder = "Indtast brugernavn" })
            </div>
            <div class="col-md-12" style="float: none">
                @Html.ValidationMessageFor(model => model.UserPassword)
                @Html.TextBoxFor(x => x.UserPassword, new { @class = "form-control", @placeholder = "Indtast password", @type = "password" })
            </div>
            <div class="col-md-6 checkbox" style="float: none">
                <label>
                    @Html.CheckBoxFor(x => x.RememberMe)
                    Husk login
                </label>
            </div>
            <div class="col-md-6" style="float: none">
                <button type="submit" class="btn btn-default">Log på</button>
            </div>
        </div>
    }
}   